---
import BaseLayout from "@/layouts/base-layout.astro";
import { OrderLookupPage } from "@/modules/order/components";
---

<BaseLayout title="Cek Pesanan">
  <div class="bg-background min-h-screen">
    <div class="border-b">
      <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold">Cek Pesanan</h1>
        <p class="text-muted-foreground mt-2">
          Lacak status pesanan Anda dengan nomor transaksi
        </p>
      </div>
    </div>

    <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
      <OrderLookupPage client:load />
    </div>
  </div>
</BaseLayout>
