---
import BaseLayout from "@/layouts/base-layout.astro";
import { OrderHistoryPage } from "@/modules/order/components";
---

<BaseLayout title="Riwayat Pesanan | Haebot Commerce">
  <div class="bg-background min-h-screen">
    <div class="border-b">
      <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold">Riwayat Pesanan</h1>
        <p class="text-muted-foreground mt-2">
          Lihat dan lacak semua pesanan Anda
        </p>
      </div>
    </div>

    <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
      <OrderHistoryPage client:load />
    </div>
  </div>
</BaseLayout>
